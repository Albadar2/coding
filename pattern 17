#include<iostream>
using namespace std;
int main(){
    int n,i,j;
    int a;
    int start;
    
    cin>>n;
     i=1;
     while(i<=n){
         int j=1;
         while(j<=n-i+1){
             cout<<j;
             j++;
         }
           int a=2*(i-1);
        
         while(a){
         
             cout<<"*";
             a--;
             
            }
            int start=n-i+1;
            while(start){
            cout<<start;
            start=start-1;
            }
        
        
        
        
         cout<<endl;
         i++;
        
         }
    return 0;
}
